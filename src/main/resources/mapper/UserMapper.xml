<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.spring.mapper.UserMapper">

    <insert id="addUser" parameterType="User" >
        INSERT INTO users (name,age,password,detail) VALUES (#{name},#{age},#{password},#{detail})
    </insert>

    <select id="getUser" parameterType="int" resultType="User">
        SELECT * FROM USERS WHERE id=#{id}
    </select>

    <select id="getUserByUsername"  resultType="User">
        SELECT * FROM USERS WHERE name=#{name},password=#{password}
    </select>

    <select id="getAllUsers" resultType="User">
        SELECT * FROM users
    </select>

    <update id="updateUser" parameterType="User">
        UPDATE users set name=#{name},age=#{age},password=#{password},detail=#{detail} WHERE id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int" >
        DELETE FROM users WHERE id=#{id}
    </delete>

</mapper>